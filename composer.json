{
    "name": "falgunphp/skeleton",
    "description": "This is skeleton for Falgun Framework.",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "S.M. Ataur Rahman",
            "email": "dev.ataur.rahman@gmail.com",
            "homepage": "https://ataur.net/"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.4.0",
        "falgunphp/application": "*",
        "falgunphp/fancyerror": "*",
        "falgunphp/reporter": "*",
        "falgunphp/fountain": "*",
        "falgunphp/http": "*",
        "falgunphp/routing": "*",
        "falgunphp/midlayer": "*",
        "falgunphp/middlewares": "*",
        "falgunphp/template": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^0.12.18",
        "vimeo/psalm": "^3.11",
        "phpunit/phpunit": "^9.1"
    },
    "scripts": {
        "phpunit": "phpunit --verbose --colors=always"
    },
    "config": {
        "sort-packages": true
    }
}
